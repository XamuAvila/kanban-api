// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuario {
  id    Int     @id @default(autoincrement())
  email String  @unique
  login  String @unique
  senha String
  cards Card[]
}

model Card {
  id            Int     @id @default(autoincrement())
  titulo        String
  conteudo      String?
  lista         String
  usuario       Usuario    @relation(fields: [idUsuario], references: [id])
  idUsuario     Int
}
